@model string
@{
    ViewBag.Title = "Index";
}

@section JavascriptInHead
{
<script src="~/Scripts/Courses/courses-controller.js"></script>
    <script type="text/javascript">
        registrationModule.factory('bootstrappedCourses', function() {
            return{
                courses: @Html.Raw(Model)
            };
        });

        console.log(courses);
    </script>
}
<div class="container">
    <div class="row">
        <div class="span10">
            <h2>Courses</h2>
        </div>
    </div>
    <div class="row">
        <div class="span10" ng-controller="CoursesController">
            <table class="table table-condensed table-hover">
                <tr>
                    <th>Course</th>
                    <th>Course Name</th>
                    <th>Instructor</th>
                </tr>
                <tr ng-repeat="course in courses">
                    <td>{{course.number}}</td>
                    <td>{{course.name}}</td>
                    <td>{{course.instructor}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>
